<% current_page?(new_user_session_path) ? bkg_class = 'with-background-body' : bkg_class = 'default-body' %>

<!DOCTYPE html>
<html>
  <head>
    <title>MobileSenior</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Londrina+Solid">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%=bkg_class%>'>
    <div class="container-fluid">
      <%= render 'shared/menu' %>

      <%= render 'shared/notifications' %>

      <%= yield %>
    </div>
  </body>
</html>
